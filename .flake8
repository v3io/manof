[flake8]

# no lines over 120 allowed
max-line-length = 120

# exclude these dirs
exclude = .git,venv

# ignore the following rules
ignore =

    # whitespace before ':'
    E203

    # line break before binary operator
    W503

    # F401 unused imports (TODO: unignore and use flake8-putty to allow this for 'models' when it supports flake8 v3)
    F401
